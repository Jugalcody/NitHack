<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".edit_profile">

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@android:drawable/sym_def_app_icon" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@id/image"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:padding="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:textSize="19sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:gravity=""
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/editdesign"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:id="@+id/name1"
                    android:hint="Naruto"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name1"
                    android:padding="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:text="Email"
                    android:textSize="19sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/name1"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="27dp"
                    android:gravity=""
                    android:inputType="textEmailAddress"
                    android:background="@drawable/editdesign"
                    android:padding="5dp"
                    android:id="@+id/email1"
                    android:layout_marginEnd="20dp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:hint="adss@gmail.com"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email1"
                    android:padding="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:text="Phone no:"
                    android:textSize="19sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/editdesign"
                    android:layout_below="@id/email1"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:gravity=""
                    android:inputType="phone"
                    android:layout_marginEnd="20dp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:id="@+id/phone"
                    android:hint="60343232"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phone"
                    android:padding="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:text="Address"
                    android:textSize="19sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:autofillHints="phone"
                    android:background="@drawable/editdesign"
                    android:layout_below="@id/phone"
                    android:layout_alignParentStart="true"
                    android:inputType="text"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:gravity=""
                    android:layout_marginEnd="20dp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:id="@+id/address"
                    android:text="nerist,nirjuli"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address"
                    android:padding="4dp"
                    android:layout_marginStart="8dp"
                    android:text="Occupation:"
                    android:textStyle="bold"
                    android:id="@+id/register"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/editdesign"
                    android:layout_below="@id/address"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:gravity=""
                    android:layout_marginEnd="20dp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:inputType="text"
                    android:id="@+id/register1"
                    android:hint="Student/techer etc"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/register1"
                    android:padding="4dp"
                    android:layout_marginStart="8dp"
                    android:text="College name:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_below="@id/register1"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:gravity=""
                    android:layout_height="48dp"
                    android:background="@drawable/editdesign"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/college1"
                    android:hint="nersit"
                    android:inputType="text"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="118dp"
                    android:layout_height="48dp"
                    android:layout_below="@id/college1"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#1565C0"
                    android:text="Save"
                    android:textColor="#0C0C0C"
                    android:textStyle="bold" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>