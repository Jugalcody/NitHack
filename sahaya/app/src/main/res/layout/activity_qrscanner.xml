<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".QRScanner">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/scan_qrcode"
        android:padding="15dp"
        android:background="@drawable/orange_button"
        android:layout_margin="50dp"
        android:layout_alignParentBottom="true"
        />
    <TextView
    android:id="@+id/qrtitle"
    android:drawablePadding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="28dp"
    android:fontFamily="@font/gugi"
    android:text="User Information"
    android:textColor="#266291"
    android:textSize="30sp"
    android:textStyle="bold" />



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:layout_marginBottom="20dp"
    android:id="@+id/qrscan_scroll"
    android:layout_below="@id/qrtitle"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgs"
            android:minHeight="250dp"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/imgs"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/name_qrscan_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold"
            android:textSize="@dimen/register_font_size"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/name_qrscan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:background="@drawable/rt"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="@dimen/padding_register"
            android:textColor="@color/register_text_color1"
            android:textSize="@dimen/register_edit_text_size" />
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/name_qrscan_parent"
            android:layout_marginStart="11dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/user_qrscan_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Identity"
                android:layout_marginStart="4dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:textSize="@dimen/register_font_size"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/user_qrscan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:background="@drawable/rt"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:padding="@dimen/padding_register"
                android:textColor="@color/register_text_color1"
                android:textSize="@dimen/register_edit_text_size" />
        </LinearLayout>



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/user_qrscan_parent"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/college_qrscan_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="College"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold"
            android:textSize="@dimen/register_font_size"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/collge_qrscan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rt"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="@dimen/padding_register"
            android:textColor="@color/register_text_color1"
            android:textSize="@dimen/register_edit_text_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/Roll_qrscan_parent"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/phone_qrscan_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold"
            android:textSize="@dimen/register_font_size"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/phone_qrscan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rt"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="@dimen/padding_register"
            android:textColor="@color/register_text_color1"
            android:textSize="@dimen/register_edit_text_size" />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/phone_qrscan_parent"
            android:layout_marginStart="11dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/gender_qrscan_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_marginStart="4dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"

                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:textSize="@dimen/register_font_size"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/gender_qrscan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rt"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:padding="@dimen/padding_register"
                android:textColor="@color/register_text_color1"
                android:textSize="@dimen/register_edit_text_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/college_qrscan_parent"
            android:layout_marginStart="11dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/Roll_qrscan_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roll"
                android:layout_marginStart="4dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:textSize="@dimen/register_font_size"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/roll_qrscan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rt"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:padding="@dimen/padding_register"
                android:textColor="@color/register_text_color1"
                android:textSize="@dimen/register_edit_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/gender_qrscan_parent"
            android:layout_marginStart="11dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/address_qrscan_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address/Hostel"
                android:layout_marginStart="4dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:textSize="@dimen/register_font_size"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/address_qrscan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rt"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:padding="@dimen/padding_register"
                android:textColor="@color/register_text_color1"
                android:textSize="@dimen/register_edit_text_size" />
        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/address_qrscan_parent"
            android:layout_marginStart="11dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/occupation_qrscan_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address/Hostel"
                android:layout_marginStart="4dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:textSize="@dimen/register_font_size"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/occupation_qrscan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:background="@drawable/rt"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:padding="@dimen/padding_register"
                android:textColor="@color/register_text_color1"
                android:textSize="@dimen/register_edit_text_size" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/occupation_qrscan_parent"
            android:layout_marginStart="11dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/idcard_qrscan_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Card"
                android:layout_marginStart="4dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:textSize="@dimen/register_font_size"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/idcard_qrscan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:visibility="gone"
    android:id="@+id/qrscan_guard_progress"/>

</RelativeLayout>