<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="#4581C6"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:layout_height="170dp">

    <ImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_general_header"
        android:layout_gravity="start"
        android:background="@drawable/rt2"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/user" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rikesh Yadav"
        android:id="@+id/text1_general"
        android:layout_marginTop="20dp"
        android:layout_marginStart="140dp"
        android:textSize="28sp"
        android:fontFamily="@font/gugi"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1_general"
        android:text="student"
        android:id="@+id/text2_general"
        android:layout_marginTop="5dp"
        android:layout_marginStart="140dp"
        android:textSize="22sp"
        android:fontFamily="@font/gugi"
        android:textColor="@color/black"/>

</RelativeLayout>